<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
    />
    <title>CRUD</title>
  </head>
  <body class="bg-dark text-white">
    <%- include('partials/header')%> <%- include('partials/config')%>

    <main class="container">
      <p class="fw-bold fs-1 text-center">Lista de todos usuários</p>
      <%doc.forEach((i)=>{%>
      <form
        method="POST"
        action="/<%=i.id%>?_method=DELETE"
        class="text-bg-dark border border-warning p-2 mt-4 rounded"
      >
        <div id="<%=i.id%>">
          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control"
              aria-describedby="basic-addon1"
              value="<%=i.name%>"
              disabled
            />
          </div>
          <div class="d-flex gap-2">
            <div class="input-group mb-3 w-50">
              <input
                type="text"
                class="form-control"
                aria-describedby="basic-addon1"
                value="<%=i.office%>"
                disabled
              />
            </div>

            <div class="input-group mb-3 w-50">
              <input
                type="text"
                class="form-control"
                aria-describedby="basic-addon1"
                value="<%=i.permission%>"
                title="Permissão"
                disabled
              />
            </div>
          </div>
          
          <div class="input-group mb-3">
            <span class="input-group-text">Telefone</span>
            <input
              type="text"
              class="form-control"
              aria-describedby="basic-addon1"
              value="<%=i.phone%>"
              title="Telefone"
              disabled
            />
          </div>

          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control"
              aria-describedby="basic-addon1"
              value="<%=i.email%>"
              disabled
            />
          </div>

          <div class="d-flex justify-content-between gap-2">
            <a href="/view/<%=i.id%>" class="btn btn-info w-75">Ver mais</a>
            <!-- <div> -->
            <a href="/edit/<%=i.id%>" class="btn btn-secondary w-25">Editar</a>
            <button type="submit" class="btn btn-danger w-25">Excluir</button>
            <!-- </div> -->
          </div>
        </div>
      </form>
      <%})%>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/script.js"></script>
    <script src="/scripts/theme.js"></script>
  </body>
</html>
