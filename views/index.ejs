<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <title>CRUD</title>
</head>
<body class="bg-dark text-white">

    <%- include('partials/header')%>

    <main class="container">

        <%doc.forEach((i)=>{%>
        <form>
            <div id="<%i.id%>" class="text-bg-dark border border-warning p-2 mt-2 rounded">
                <p>Nome: <%=i.name%></p>
                <p>Telefone: <%=i.phone%></p>
                <p>Email: <%=i.email%></p>
                <div class="d-flex justify-content-end gap-2">
                    <a href="" class="btn btn-info">Ver mais</a>
                    <a href="/edit/<%=i.id%>" class="btn btn-secondary">Editar</a>
                    <button onclick="deleteUser('<%=i.id%>')" class="btn btn-danger">Excluir</button>
                </div>
            </div>
        </form>
        <%})%>
        

    </main>

    <script>
        const deleteUser = (id) => {
            fetch("/" + id, {method: "DELETE"}).then(res=>{
                res.text().then(userId=>{
                    document.getElementById(userId).remove();
                })
            })
        }
    </script>
</body>
</html>